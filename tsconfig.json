{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2019.array"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/*",
    "src/handler/*",
    "src/commands/*",
    "src/commands/admin/*",
    "src/commands/list/*",
    "src/classes/*",
    "src/events/*",
    "src/entities/*",
    "src/lib/*",
    "src/lib/lastfm/*",
    "src/lib/spotify/*",
    "src/utils/*",
    "src/utils/polyfills/*",
    "config.json"
  ]
}
