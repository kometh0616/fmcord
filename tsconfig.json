{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "src/handler",
    "src/commands",
    "src/events",
    "src/entities",
    "config.json",
    ".data/database.sqlite"
  ]
}
